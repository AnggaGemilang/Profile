<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:text="Profile" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/foto_profil"
                android:layout_centerHorizontal="true"
                android:elevation="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:layout_marginTop="140dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/ic_settings_black_24dp" />

                        <Button
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20dp"
                            android:gravity="end"
                            android:background="@color/transparent"
                            android:layout_marginRight="12dp"
                            android:drawableLeft="@drawable/ic_info_black_24dp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Angga Gemilang"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="19sp"
                            android:layout_marginTop="85dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="angga.gemilang.mu@gmail.com"
                            android:gravity="center_horizontal"
                            android:textSize="17sp"
                            android:layout_marginTop="4dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="#ccc" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <Button
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@color/transparent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_check_circle_black_24dp" />

                            <TextView
                                android:layout_width="280dp"
                                android:layout_height="match_parent"
                                android:text="Angga Gemilang"
                                android:gravity="center"
                                android:textSize="17sp"/>

                            <Button
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@color/transparent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_chevron_right_black_24dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <Button
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@color/transparent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_check_circle_black_24dp" />

                            <TextView
                                android:layout_width="280dp"
                                android:layout_height="match_parent"
                                android:text="Bandung, 24 Agustus 2002"
                                android:gravity="center"
                                android:textSize="17sp"/>

                            <Button
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@color/transparent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_chevron_right_black_24dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <Button
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@color/transparent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_check_circle_black_24dp" />

                            <TextView
                                android:layout_width="280dp"
                                android:layout_height="match_parent"
                                android:text="17 Years Old"
                                android:gravity="center"
                                android:textSize="17sp"/>

                            <Button
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@color/transparent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_chevron_right_black_24dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <Button
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@color/transparent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_check_circle_black_24dp" />

                            <TextView
                                android:layout_width="280dp"
                                android:layout_height="match_parent"
                                android:text="Jln. Ciguruwik, Cinunuk, Cibiru"
                                android:gravity="center"
                                android:textSize="17sp"/>

                            <Button
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@color/transparent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_chevron_right_black_24dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingBottom="10dp"
                            android:orientation="horizontal" >

                            <Button
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@color/transparent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_check_circle_black_24dp" />

                            <TextView
                                android:layout_width="280dp"
                                android:layout_height="match_parent"
                                android:text="Calon Programmer"
                                android:gravity="center"
                                android:textSize="17sp"/>

                            <Button
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@color/transparent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_chevron_right_black_24dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>